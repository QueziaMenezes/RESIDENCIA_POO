package br.com.residencia.poo.aula1;

import java.util.Scanner;

public class EscrevaNomeIdade {
	public static void main(String[] args) {
		Scanner tex = new Scanner(System.in);
		String nome;
		int idade;
		
		System.out.println("Escreva seu nome: ");
		nome = tex.nextLine();
		System.out.println("Agora digite sua idade: ");
		idade = tex.nextInt();
		System.out.println("Olá, " + nome + "\nVocê tem: " + idade + "anos?!\nEitaa... Haja histórias para contar!! rsrsrs");
		
		tex.close();

}
}