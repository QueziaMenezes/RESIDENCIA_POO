package br.com.residencia.poo.aula1;

import java.util.Scanner;

public class MediaFacaEnquanto {

	public static void main(String[] args) {
		Scanner tex = new Scanner(System.in);
		
		int nota, totalNotas = 0, media, cont = 0;
				String disciplina, nome;
				
				System.out.println("Digite seu nome: ");
				nome = tex.nextLine();
				System.out.println("Digite sua disciplina: ");
				nome = tex.nextLine();
				totalNotas += nota;
				cont++;
				
				 while (cont < 3);{
					media = totalNotas/3;
							System.out.printf ("\nOlá, ", nome, "\n");
							System.out.printf ("Na disciplina ", disciplina, " a média é ", media);
				
				do
					System.out.printf ("Insira a nota ", cont, ": ");
					nota = tex.nextInt();
				 }
	}
}
