package br.com.residencia.poo.atividadeparacasa;

import java.util.Scanner;

public class AtividadeCasaDois {

	public static void main(String[] args) {
		Scanner tex = new Scanner(System.in);
		int cont = 1, idade, minhaIdade, totalIdade = 0, totalGeral = 0;
		
		System.out.println("Qual é a sua idade: ");
		minhaIdade = tex.nextInt();
		
		do {
			System.out.println ("\nQual é a idade do colega " + cont + "? ");
			idade = tex.nextInt();
			totalIdade += idade;
			cont++;
			
		}while (cont <= 5);{
			totalGeral += totalIdade + minhaIdade;
			
					System.out.println ("\nO tempo de vida meu e dos meus colegas é de: " + totalIdade + " anos.");
		 }
	}

}
