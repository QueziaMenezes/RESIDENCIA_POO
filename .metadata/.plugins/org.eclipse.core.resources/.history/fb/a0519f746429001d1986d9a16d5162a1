package br.com.residencia.poo.atividadeparacasa;

import java.util.Scanner;

public class AtividadeCasaQuatro {
	Scanner tex = new Scanner(System.in);

	float tempC, temF;
	
	System.out.Println ("Digite a temperatura em Celcius para ser convertida: ");
	tempC = tex.nextFloat();
	
	tempF = (tempC*1.8+32);
	System.out.println(tempC + "° é equivalente a: " + tempF + "°F");
		

	}

}
